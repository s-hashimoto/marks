<!--ここからぱんくず-->
<div class="bg-ash">
  <div class="container">
    <ul class="bread-crumb" itemscope="" itemtype="http://schema.org/BreadcrumbList">
      <li itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
        <a itemprop="item" href="/"><span itemprop="name">MARK 山 TOP</span></a>
          <meta itemprop="position" content="1">&gt;
      </li>
      <li itemprop="itemListElement" itemscope="" itemtype="http://schema.org/ListItem">
        <a itemprop="item" href="/users/sign_in"><span itemprop="name">ログインする</span></a>
          <meta itemprop="position" content="2">
      </li>
    </ul>
  </div>
</div>

<div class="container">
<h2>MARKSにログインする</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="columns-f">
    <div class="column-f-left">
      <h3><%= f.label :メールアドレス %></h3>
    </div>
    <div class="column-f-right">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="columns-f">
    <div class="column-f-left">
      <h3><%= f.label :パスワード %></h3>
    </div>
    <div class="column-f-right">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class="columns-f">
    <div class="column-f-left">
      　<!-- 空白 -->
    </div>
    <div class="column-f-right">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを記憶 %>
      <% end -%>
    </div>
  </div>

  <div class="columns-f">
    <%= f.submit(:ログイン, :class => 'button-devise button-not-login')%>
  </div>

<% end %>

  <div class="columns-f">
    <span class="txt-not-login">登録していない方は...</span>
    <%= render "devise/shared/links" %>
  </div>

  <p>パスワードを忘れた方は下記までご連絡ください。</p>
  <p><a href="mailto:xxbxxxqxx@gmail.com">問い合わせ</a></p>

</div>
